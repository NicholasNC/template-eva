{
  "name": "template-eva",
  "displayName": "template-eva",
  "description": "template eva",
  "version": "0.0.3",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.63.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:template-eva.insertAvatar"
  ],
  "main": "./dist/extension.js",
  "publisher": "yutucc",
  "contributes": {
    "commands": [
      {
        "command": "template-eva.insertAvatar",
        "title": "%cmd.insertAvatar.title%"
      },
      {
        "command": "template-eva.insertImage",
        "title": "%cmd.insertImage.title%"
      },
      {
        "command": "template-eva.insertLorem",
        "title": "乱数假文"
      },
      {
        "command": "template-eva.createFile",
        "title": "通过模板生成文件"
      },
      {
        "command": "template-eva.insertLogStatement",
        "title": "插入 log"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "template-eva.insertAvatar",
          "group": "9_cutcopypaste "
        },
        {
          "command": "template-eva.insertImage",
          "group": "9_cutcopypaste "
        },
        {
          "command": "template-eva.insertLorem",
          "group": "9_cutcopypaste "
        }
      ],
      "explorer/context": [
        {
          "command": "template-eva.createFile",
          "when": "explorerResourceIsFolder",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "template-eva.insertLogStatement",
        "key": "shift+ctrl+l",
        "mac": "shift+cmd+l",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "%ext.config.title%",
      "properties": {
        "template-eva.avatar": {
          "type": "string",
          "default": "http://tva1.sinaimg.cn/large/b3cc33a0gy1gxra4tr2mrj208t08tjrq.jpg",
          "description": "%ext.config.avatar%"
        },
        "template-eva.image": {
          "type": "string",
          "default": "http://tva1.sinaimg.cn/large/b3cc33a0gy1gxrdz7rk28j20go0b43zr.jpg",
          "description": "%ext.config.image%"
        },
        "template-eva.lorem": {
          "type": "string",
          "default": "大江东去，浪淘尽，千古风流人物。故垒西边，人道是，三国周郎赤壁。乱石穿空，惊涛拍岸，卷起千堆雪。江山如画，一时多少豪杰。遥想公瑾当年，小乔初嫁了，雄姿英发。羽扇纶巾，谈笑间，樯橹灰飞烟灭。故国神游，多情应笑我，早生华发。人生如梦，一尊还酹江月。",
          "description": "乱数假文"
        },
        "template-eva.embedTemplate.wxappPage": {
          "default": true,
          "description": "内置模板 - 微信小程序页面"
        },
        "template-eva.fileTemplates": {
          "type": "array",
          "description": "模板文件",
          "default": [
            {
              "fileName": "wxappPage",
              "description": "微信模板页面"
            },
            {
              "fileName": "ttTS.ts",
              "description": "测试一个文件"
            }
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.63.0",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^8.1.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.3",
    "ts-loader": "^9.2.5",
    "typescript": "^4.4.4",
    "webpack": "^5.52.1",
    "webpack-cli": "^4.8.0"
  },
  "dependencies": {
    "fs-extra": "^10.0.0",
    "lodash": "^4.17.21",
    "vscode-nls": "^5.0.0"
  }
}
